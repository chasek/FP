<p id="notice"><%= notice %></p>

<p>
  <%= gravatar_for @user, :size => 200 %>
</p>

<p>
  <b>First name:</b>
  <%= @user.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @user.last_name %>
</p>

<p>
  <b>Username:</b>
  <%= @user.username %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<% if signed_in? and current_user.admin? %>
<p>
  <b>Admin:</b>
  <%= @user.admin %>
</p>

<p>
  <b>Active:</b>
  <%= @user.active %>
</p>
<% end %>

<% if current_user?(@user) %>
<%= link_to 'Edit', edit_user_path(@user) %> |
<% end %>
<%= link_to 'Back', users_path %>
